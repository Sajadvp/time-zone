        .menu-aside {
            list-style: none;
            padding: 0;
            margin: 0;
        }

       
        .menu-item {
            font-weight: bold;
            margin: 15px 0; 
        }

        .menu-link {
            display: flex;
            align-items: center;
            color: #ffffff; 
            font-size: 16px; 
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .menu-link:hover,
        .menu-link.active {
            background-color: #1e8449; /* Darker green on hover for emphasis */
            color: #ffffff; /* White text on hover */
        }

        /* Icon Styling */
        .menu-link i {
            margin-right: 10px; /* Space between icon and text */
        }

        /* Navbar Header Styling */
        .main-header {
            display: flex;
            justify-content: space-between;
            padding: 15px 30px;
            background-color: #2ecc71; /* Light green for navbar background */
            box-shadow: 0 2px 5px rgba(0,0,0,0.1); /* Slight shadow for depth */
        }

        /* Searchbar Styling */
        .search-bar {
            border: 1px solid #ddd;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 16px;
            width: 200px;
        }

        .search-bar:focus {
            border-color: #1e8449; /* Green border on focus */
            outline: none;
        }

        /* Logout Button and Dropdown Styling */
        .main-header .col-nav {
            display: flex;
            align-items: center;
        }

        .main-header .btn-mobile {
            background-color: #1e8449; /* Darker green button */
            border-radius: 50%; /* Circular button */
            padding: 10px;
            color: white;
        }

        .main-header .nav-item .dropdown-menu-end {
            right: 0;
        }

        .main-header .dropdown-item {
            color: #f39c12; /* Golden color for the logout option */
        }

        .main-header .dropdown-item:hover {
            background-color: #c0392b; /* Red background for logout on hover */
        }

