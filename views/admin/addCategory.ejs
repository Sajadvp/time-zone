<%- include("../../views/partials/admin/header1") %>
<%- include("../../views/partials/admin/sidebar1") %>
<%- include("../../views/partials/admin/navbar1") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card shadow-sm">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white text-center">
          <h4 class="mb-0">Add New Category</h4>
        </div>

        <!-- Card Body -->
        <div class="card-body">
          <!-- Error Message Display -->
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>

          <!-- Form -->
          <form action="/admin/category/add" method="POST">
            <!-- Category Name Input -->
            <div class="mb-3">
              <label for="name" class="form-label">Category Name</label>
              <input 
                type="text" 
                class="form-control <%= typeof error !== 'undefined' && error ? 'is-invalid' : '' %>" 
                id="name" 
                name="name" 
                placeholder="Enter category name" 
                value="<%= typeof name !== 'undefined' ? name : '' %>" 
                required
              >
              <% if (typeof error !== 'undefined' && error) { %>
                <div class="invalid-feedback">
                  <%= error %>
                </div>
              <% } %>
            </div>

            <!-- Description Textarea -->
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea 
                class="form-control <%= typeof error !== 'undefined' && error ? 'is-invalid' : '' %>" 
                id="description" 
                name="description" 
                rows="4" 
                placeholder="Enter a brief description" 
                required
              ><%= typeof description !== 'undefined' ? description : '' %></textarea>
              <% if (typeof error !== 'undefined' && error) { %>
                <div class="invalid-feedback">
                  <%= error %>
                </div>
              <% } %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-block">
                Add Category
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../../views/partials/admin/footer") %>