<style>
    /* Global Styles */
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Page Title */
    .page-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Add Product Button */
    .btn-add-product {
        background-color: #28a745;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-add-product:hover {
        background-color: #218838;
    }

    /* Product Table */
    .product-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .product-table th,
    .product-table td {
        padding: 15px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    .product-table th {
        background-color: #f8f9fa;
        font-weight: 600;
        color: #333;
    }

    .product-table tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* Product Thumbnail */
    .product-thumbnail {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 4px;
    }

    /* Toggle Button */
    .btn-status-toggle {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 30px;
        border-radius: 15px;
        border: none;
        cursor: pointer;
        outline: none;
        transition: background-color 0.3s ease;
        padding: 0;
        overflow: hidden;
    }

    .btn-status-toggle::before {
        content: '';
        position: absolute;
        top: 2px;
        left: 2px;
        width: 26px;
        height: 26px;
        border-radius: 50%;
        background-color: white;
        transition: transform 0.3s ease;
    }

    .btn-listed {
        background-color: #28a745; /* Green for Listed */
    }

    .btn-unlisted {
        background-color: #dc3545; /* Red for Unlisted */
    }

    .btn-listed::before {
        transform: translateX(30px); /* Move the toggle circle to the right for Listed */
    }

    .btn-unlisted::before {
        transform: translateX(0); /* Move the toggle circle to the left for Unlisted */
    }

    /* Edit Button */
    .btn-edit {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        font-size: 0.9rem;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-edit:hover {
        background-color: #0056b3;
    }

    /* Pagination */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 30px 0;
    }

    .pagination-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 8px;
    }

    .pagination-item {
        border: 1px solid #ddd;
        border-radius: 4px;
        overflow: hidden;
    }

    .pagination-link {
        display: block;
        padding: 8px 12px;
        color: #007bff;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s, color 0.3s;
    }

    .pagination-link:hover {
        background-color: #007bff;
        color: #fff;
    }

    .pagination-item.active .pagination-link {
        background-color: #007bff;
        color: #fff;
        pointer-events: none;
    }

    .pagination-item.active {
        border-color: #007bff;
    }

    /* No Products Message */
    .no-products {
        text-align: center;
        color: #666;
        font-size: 1.2rem;
        margin: 20px 0;
    }
</style>

<div class="container">
    <!-- Page Title and Add Product Button -->
    <div class="page-title">
        <h1>Manage Products</h1>
        <a href="/admin/addProducts" class="btn-add-product">Add Product</a>
    </div>

    <!-- Product Table -->
    <table class="product-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (products.length > 0) { %>
                <% products.forEach((product, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td>
                            <img src="<%= product.image[0] %>" class="product-thumbnail" alt="Product Image">
                        </td>
                        <td><%= product.productName %></td>
                        <td><%= product.category ? product.category.name : 'No Category' %></td>
                        <td><%= product.brand ? product.brand.brandName : 'No Brand' %></td>
                        <td>â‚¹<%= product.price.toFixed(2) %></td>
                        <td><%= product.stockQuantity %></td>
                        <td>
                            <button class="btn-status-toggle <%= product.status === 'Active' ? 'btn-listed' : 'btn-unlisted' %>" 
                                onclick="toggleStatus('<%= product._id %>')">
                                <%= product.status === 'Active' ? 'Listed' : 'Unlisted' %>
                            </button>
                        </td>
                        <td>
                            <a href="/admin/editPro/<%= product._id %>" class="btn-edit">Edit</a>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="9" class="no-products">No products found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
        <div class="pagination">
            <ul class="pagination-list">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="pagination-item <%= currentPage === i ? 'active' : '' %>">
                        <a href="?page=<%= i %>" class="pagination-link"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </div>
    <% } %>
</div>

<script>
    function toggleStatus(productId) {
        if (confirm("Are you sure you want to toggle the product status?")) {
            fetch(`/admin/products/toggle-status/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Failed to toggle product status');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while toggling the status.');
            });
        }
    }
</script>

